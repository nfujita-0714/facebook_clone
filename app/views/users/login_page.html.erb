<div class="main users-new">
  <div class="container">
    <div class="form-heading">ログイン</div>
    <div class="form users-form">
      <div class="form-body">
      <%if @error_message %>
        <div class="form-error"><%= @error_message %></div>
        <% end %>
        <%= form_tag login_path do %>
          <p>メールアドレス</p>
          <input name="email" value ="<%= @email %>"<input class="form-control">
          <p>パスワード</p>
          <input type="password" name="password" value="<%= @password %>"<input class="form-control">
          <input type="submit" value="ログイン" class="btn btn-primary">
        <% end %>
      </div>
    </div>
  </div>
</div>