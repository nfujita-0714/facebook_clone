<div class="main users-new">
  <div class= "container">
    <div class="form-heading">新規ユーザー登録</div>
    <%= form_tag users_path do %>
      <div class="form-users-form">
        <div class="form-body">
        <% @user.errors.full_messages.each do |message| %>
            <div class="form-error"><%= message %></div>
          <% end %>
          <p>ユーザー名</p>
          <input name="name" value="<%= @user.name %>"<input class="form-control">
          <p>メールアドレス</p>
          <input name="email" value="<%= @user.email %>"<input class="form-control">
          <p>パスワード</p>
          <input name="password" type="password" value="<%= @user.password %>"<input class="form-control">
          <p>プロフィール画像</p>
          <input name="image" type="file"<input class="form-control">
          <input type="submit" value="新規登録" class="btn btn-primary">

        </div>
      </div>
    <% end %>
  </div>
</div>