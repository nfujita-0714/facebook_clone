<div class="main user-show">
  <div class="container">
    <div class="user">
      <%= image_tag "/user_images/#{@user.image}" %>
      <h2><%= @user.name %></h2>
      <p2><%= @user.email %></p2>
      <%if @user.id == @current_user.id %>
        <%= link_to "ユーザー情報を編集する", edit_user_path(@user.id), class: "user_edit_button" %>
      <% end %>
    </div>
  </div>
</div>